{
  "kind": "collectionType",
  "collectionName": "tasks",
  "info": {
    "singularName": "task",
    "pluralName": "tasks",
    "displayName": "Task",
    "description": "Individual tasks within task lists"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "text"
    },
    "estimatedMinutes": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "in_progress", "completed"],
      "default": "pending"
    },
    "dueDate": {
      "type": "datetime"
    },
    "completedAt": {
      "type": "datetime"
    },
    "taskList": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::task-list.task-list",
      "inversedBy": "tasks"
    },
    "assignedTo": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    }
  }
}
